{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du trajet <i>{{ trajet.id }}</i> à pourvoir :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.villeDepart }}</strong> <i>({{ trajet.villeArrive }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ trajet.dateDepart|date('d/m/Y H:i') }}</i>
                </div>
            </div>

            <p>
                <strong>{{ trajet.villeDepart }}</strong>
                <small> - <i>{{ trajet.conducteur.nom }}</i></small>
            </p>


            <p>
                <strong>Email de contact :</strong> {{ trajet.conducteur.email }}
            </p>
            <p>
                <strong>Date d'expirtaion :</strong> {{ trajet.dateArrive|date('d/m/Y H:i') }}
            </p>
            <p>
                <strong>Le conducteur du trajet : <strong>
                <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>
                </thead>
                <tbody>
                {% for conducteur in trajet.conducteur %}
                    <tr>
                        <td><a href="#">{{ trajet.conducteur.nom }}</a></td>
                        <td>{{ conducteur.prenom }}</td>
                        <td>{{ conducteur.email }}</td>
                        <td>{{ conducteur.telephone }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </p>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="#">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}